<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="50dp">
    <TextView
        android:text="Veuillez vous connecter"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Connecter"
        android:gravity="center"
        android:paddingBottom="75dp"
        android:textSize="30sp"
        android:textColor="@android:color/black" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NomUtilisateur"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:hint="Nom d'utilisateur" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MotPasse"
        android:textColor="@android:color/black"
        android:hint="Mot de passe"
        android:textSize="28sp"
        android:password="true" />
    <Button
        android:text="Connexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Enregistrer"
        android:textSize="25sp" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="55.5dp"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Créer un nouveau compte"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/CreerCompte"
            android:gravity="center_horizontal"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />
        <TextView
            android:text="Mot de passe oublié"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/MotPasseOublier"
            android:gravity="center_horizontal"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>